<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fitucab.ds1617b.fitucab.UI.Activities.M05PrincipalActivity"
    tools:showIn="@layout/activity_m05_principal_activity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/TabHost_m05" />

    <ListView
        android:id="@+id/lv_m05_listactivity"
        android:layout_width="368dp"
        android:layout_height="match_parent"
        android:foregroundGravity="center_horizontal"
        android:layout_x="11dp"
        android:layout_y="63dp"
        android:typeface="sans"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="76dp"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </ListView>

    <TextView
        android:id="@+id/tv_m05_actualdate"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="19dp"
        android:gravity="center"
        android:text="@string/_tv_m05_thisweek"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/fab_m05_datepickerserch"
        android:layout_toStartOf="@+id/fab_m05_datepickerserch"
        android:layout_above="@+id/lv_m05_listactivity" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_m05_datepickerserch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lv_m05_listactivity"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        app:backgroundTint="@color/colorBtnConfirmar"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_today" />


</RelativeLayout>
