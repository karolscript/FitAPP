<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/_cupImage"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/cup_image"
        android:layout_alignBottom="@+id/_descriptionTV" />

    <TextView
        android:id="@+id/_achievementLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/_cupImage"
        android:paddingTop="6dp"
        android:text="Achievement: "
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/_achievementTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="12sp"
        tools:text="achievements"
        android:layout_alignBaseline="@+id/_achievementLabel"
        android:layout_alignBottom="@+id/_achievementLabel"
        android:layout_toRightOf="@+id/_achievementLabel"
        android:layout_toEndOf="@+id/_achievementLabel" />

    <TextView
        android:id="@+id/_awardLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text="Award: "
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/_awardTV"
        android:layout_toStartOf="@+id/_awardTV" />

    <TextView
        android:id="@+id/_awardTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="12sp"
        tools:text="award"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignBaseline="@+id/_awardLabel"
        android:layout_alignBottom="@+id/_awardLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/_descriptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/_achievementLabel"
        android:layout_toEndOf="@+id/_cupImage"
        android:layout_toRightOf="@+id/_cupImage"
        android:fontFamily="monospace"
        android:paddingTop="6dp"
        android:text="Description:"
        android:textColor="#353535"
        android:textSize="15dp"
        android:textStyle="italic" />



</RelativeLayout>