
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorWhiteSmoke"
    tools:context=".UI.Fragments.M10.M10WaterGlassFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <!-- TODO: Update blank fragment layout -->


    <ImageButton
        android:id="@+id/btn_m10_lessWaterMain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorWhiteSmoke"
        android:src="@mipmap/btn_less_m10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
  
        app:layout_constraintRight_toLeftOf="@+id/tv_m10_ml"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_alignBottom="@+id/tv_m10_ml"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/tv_m10_ml"
        android:layout_width="145dp"
        android:layout_height="85dp"
        android:focusable="false"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:text="200"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="102dp"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/btn_m10_AddWater"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorWhiteSmoke"
        android:src="@mipmap/btn_add_m10"
        app:layout_constraintRight_toRightOf="parent"
       
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="419dp"
        android:layout_alignBottom="@+id/Et_m10_water"
        android:layout_alignLeft="@+id/btn_m10_addwaterMain"
        android:layout_alignStart="@+id/btn_m10_addwaterMain" />



    <ImageButton
        android:id="@+id/foto"
        android:layout_width="227dp"
        android:layout_height="227dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@color/colorWhiteSmoke"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_water_glass"
        android:layout_marginBottom="188dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />





    <ImageButton
        android:id="@+id/btn_m10_addwaterMain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorWhiteSmoke"
        android:src="@mipmap/btn_add_m10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/tv_m10_ml"
        android:layout_alignBottom="@+id/tv_m10_ml"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp" />

    <EditText
        android:id="@+id/Et_m10_water"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:focusable="false"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/btn_m10_lessWater"
        app:layout_constraintRight_toLeftOf="@+id/btn_m10_AddWater"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteY="436dp"
        android:layout_above="@+id/foto"
        android:layout_alignLeft="@+id/tv_m10_ml"
        android:layout_alignStart="@+id/tv_m10_ml"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/btn_m10_lessWater"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorWhiteSmoke"
        android:src="@mipmap/btn_less_m10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
       
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/Et_m10_water"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />





</RelativeLayout>
