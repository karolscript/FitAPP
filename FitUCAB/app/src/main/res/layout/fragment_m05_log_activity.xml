<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/m05_log_activity_fragment"
    android:background="@color/colorWhiteSmoke"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitucab.ds1617b.fitucab.UI.Activities.M05AddExerciseActivity">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_m05_titulotipo"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_x="31dp"
        android:layout_y="30dp"
        android:fontFamily="sans-serif"
        android:typeface="sans"
        android:gravity="center"
        android:text="@string/_tv_m05_type"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_m05_manualregister"
        android:layout_alignEnd="@+id/btn_m05_manualregister" />

    <TextView
        android:id="@+id/tv_m05_startime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:typeface="sans"
        android:layout_x="35dp"
        android:layout_y="153dp"
        android:gravity="center"
        android:text="@string/_tv_m05_startime"
        android:textSize="20dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/spn_tipe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:id="@+id/et_m05_calories"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_x="77dp"
        android:fontFamily="sans-serif"
        android:typeface="sans"
        android:layout_y="389dp"
        android:hint="@string/_tv_m05_calories"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/tv_m05_time"
        android:layout_alignLeft="@+id/tv_m05_time"
        android:layout_alignStart="@+id/tv_m05_time"
        android:layout_marginTop="18dp"
        android:layout_alignRight="@+id/btn_m05_manualregister"
        android:layout_alignEnd="@+id/btn_m05_manualregister" />

    <EditText
        android:id="@+id/et_m05_uptime"
        android:layout_width="270dp"
        android:layout_height="wrap_content"

        android:layout_x="78dp"
        android:layout_y="295dp"
        android:fontFamily="sans-serif"
        android:typeface="sans"
        android:ems="10"
        android:hint="@string/_tv_m05_duration"
        android:inputType="number"
        android:layout_below="@+id/et_m05_calories"
        android:layout_alignLeft="@+id/et_m05_calories"
        android:layout_alignStart="@+id/et_m05_calories"
        android:layout_marginTop="18dp"
        android:layout_alignRight="@+id/et_m05_calories"
        android:layout_alignEnd="@+id/et_m05_calories" />

    <TextView
        android:id="@+id/tv_m05_date"
        style="@android:style/Widget.DeviceDefault.Light.Spinner"
        android:layout_width="126dp"
        android:layout_height="57dp"
        android:fontFamily="sans-serif"
        android:typeface="sans"
        android:layout_x="78dp"
        android:layout_y="183dp"
        android:textSize="18dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignLeft="@+id/tv_m05_titulotipo"
        android:layout_alignStart="@+id/tv_m05_titulotipo"
        android:layout_alignRight="@+id/spn_tipe"
        android:layout_alignEnd="@+id/spn_tipe" />


    <TextView
        android:id="@+id/tv_m05_time"
        style="@android:style/Widget.DeviceDefault.Light.Spinner"
        android:layout_width="93dp"
        android:layout_height="59dp"
        android:fontFamily="sans-serif"
        android:typeface="sans"
        android:textSize="18dp"
        android:layout_x="257dp"
        android:layout_y="181dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/tv_m05_date"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_marginTop="14dp"
        android:layout_alignRight="@+id/tv_m05_date"
        android:layout_alignEnd="@+id/tv_m05_date" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:layout_x="37dp"
        android:layout_y="183dp"
        app:srcCompat="@mipmap/ic_launcher_time"
        android:layout_alignTop="@+id/et_m05_uptime"
        android:layout_toLeftOf="@+id/et_m05_uptime"
        android:layout_toStartOf="@+id/et_m05_uptime" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:layout_x="37dp"
        android:layout_y="183dp"
        app:srcCompat="@mipmap/ic_launcher_time"
        android:layout_alignTop="@+id/tv_m05_time"
        android:layout_toLeftOf="@+id/tv_m05_date"
        android:layout_toStartOf="@+id/tv_m05_date" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:layout_x="215dp"
        android:layout_y="198dp"
        app:srcCompat="@mipmap/ic_launcher_date"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/tv_m05_startime"
        android:layout_toLeftOf="@+id/tv_m05_date"
        android:layout_toStartOf="@+id/tv_m05_date" />

    <Button
        android:id="@+id/btn_m05_manualregister"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_x="107dp"
        android:layout_y="472dp"
        android:width="200dp"
        android:background="@color/colorGreenBtn"
        android:backgroundTint="@color/colorGreenBtn"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/_btn_m05_registermanual"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorwhite"
        android:textSize="18dp"

        android:typeface="sans"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/et_m05_uptime"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spn_tipe"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="sans-serif"
        android:typeface="sans"
        android:textSize="18dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_m05_titulotipo"
        android:layout_alignLeft="@+id/btn_m05_manualregister"
        android:layout_alignStart="@+id/btn_m05_manualregister"
        android:layout_alignRight="@+id/tv_m05_titulotipo"
        android:layout_alignEnd="@+id/tv_m05_titulotipo" />


</RelativeLayout>

