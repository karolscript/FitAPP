<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitucab.ds1617b.fitucab.UI.Fragments.M02.M02AccountFragment">

    <!-- TODO: Update blank fragment layout -->



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:id="@+id/tv_m02_perfil"
        android:text="@string/tv_m02_perfil" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"

                android:padding="10dp"
                android:weightSum="12">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/_profileImage"
                    android:layout_width="96dp"
                    android:layout_height="66dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:src="@drawable/user_profile_image"
                     />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_column="1">



                    <EditText
                        android:id="@+id/et_m02_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="2"
                        android:background="@color/transparent"
                        android:drawableLeft="@drawable/ic_account"
                        android:drawablePadding="10dp"
                        android:ems="10"

                        android:hint="@string/et_m02_username"
                        android:inputType="textPersonName"
                        android:maxLength="20"
                        android:text="     Mundo"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12dp" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:weightSum="12">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1">

                    <EditText
                        android:id="@+id/et_m02_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="2"
                        android:background="@color/transparent"
                        android:drawableLeft="@drawable/ic_mail"

                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="@string/et_m02_email"
                        android:inputType="textPersonName"
                        android:maxLength="20"
                        android:text="  Email"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12dp" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:weightSum="12">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1">

                    <EditText
                        android:id="@+id/et_m02_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="2"
                        android:background="@color/transparent"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="@string/et_m02_phone"
                        android:inputType="textPersonName"
                        android:maxLength="20"
                        android:text="    0212-75"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12dp" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</FrameLayout>
